@model IEnumerable<WebGiayyy.Models.Category>

@{
    ViewBag.Title = "Quản lý danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>📂 Quản lý danh mục</h2>

    @Html.ActionLink("➕ Thêm danh mục", "CreateDoanhMuc", "Products",
        new { area = "Admin" },
        new { @class = "btn btn-primary" })
</div>

<table class="table table-bordered table-hover align-middle text-center">
    <thead class="table-dark">
        <tr>
            <th>Slug</th>
            <th>Tên danh mục</th>
            <th>Mô tả</th>
            <th>Thứ tự</th>
            <th>Trạng thái</th>
            <th>Ngày tạo</th>
            <th>Nhóm</th>
            <th width="160">Thao tác</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CatSlug)</td>
                <td><strong>@item.CatName</strong></td>
                <td>@item.Description</td>
                <td class="text-center">@item.SortOrder</td>

                <td class="text-center">
                    @if (item.IsActive == true)
                    {
                        <span class="badge bg-success">Hiển thị</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Ẩn</span>
                    }
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.CategoryGroup.GroupCode)
                </td>

                <td class="text-center">
                    @Html.ActionLink("Sửa", "Edit", "Products",
                        new { area = "Admin", id = item.CategoryId },
                        new { @class = "btn btn-sm btn-warning" })

                    @Html.ActionLink("Xóa", "Delete", "Products",
                        new { area = "Admin", id = item.CategoryId },
                        new { @class = "btn btn-sm btn-danger ms-1" })
                </td>
            </tr>
        }
    </tbody>
</table>
