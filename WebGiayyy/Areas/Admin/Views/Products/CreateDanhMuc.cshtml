@model WebGiayyy.Models.CategoryCreateVM
@{
    ViewBag.Title = "Thêm danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("CreateDoanhMuc", "Products", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label>Tên danh mục</label>
        @Html.TextBoxFor(m => m.CatName, new { @class = "form-control", required = true })
    </div>

    <div class="mb-3">
        <label>Slug</label>
        @Html.TextBoxFor(m => m.CatSlug, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        <label>Mô tả</label>
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 3 })
    </div>

    <hr />

    <div class="mb-3">
        <label>Nhóm danh mục (có sẵn)</label>
        @Html.DropDownListFor(
            m => m.GroupId,
            (SelectList)ViewBag.GroupList,
            "-- Chọn group --",
            new { @class = "form-select" }
        )
    </div>

    <div class="mb-3">
        <label>HOẶC tạo nhóm mới</label>
        @Html.TextBoxFor(m => m.NewGroupCode, new
        {
            @class = "form-control mb-2",
            placeholder = "Group code (vd: SHOES)"
        })
        @Html.TextBoxFor(m => m.NewGroupName, new
        {
            @class = "form-control",
            placeholder = "Tên group (vd: Giày dép)"
        })
    </div>

    <div class="mb-3">
        <label>Thứ tự</label>
        @Html.TextBoxFor(m => m.SortOrder, new { @class = "form-control", type = "number" })
    </div>

    <div class="form-check mb-3">
        @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input" })
        <label class="form-check-label">Hiển thị</label>
    </div>

    <button type="submit" class="btn btn-primary">💾 Lưu danh mục</button>
}