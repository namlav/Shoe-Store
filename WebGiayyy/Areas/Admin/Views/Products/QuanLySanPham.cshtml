@model IEnumerable<WebGiayyy.Models.Product>

@{
    ViewBag.Title = "Quản lý sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    @using (Html.BeginForm("DeleteMultiple", "Products", FormMethod.Post, new { area = "Admin" }))
    {
        @Html.AntiForgeryToken()

        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="fw-bold">
                <i class="fas fa-box text-success"></i> Quản lý sản phẩm
            </h3>

            <div>
                <a href="@Url.Action("Create", "Products", new { area = "Admin" })"
                   class="btn btn-success me-2">
                    <i class="fas fa-plus"></i> Thêm sản phẩm
                </a>

                <button type="submit"
                        class="btn btn-danger"
                        onclick="return confirm('Bạn có chắc muốn xóa các sản phẩm đã chọn?')">
                    <i class="fas fa-trash"></i> Xóa đã chọn
                </button>
            </div>
        </div>

        <!-- Table -->
        <div class="card shadow">
            <div class="card-body">
                <table class="table table-bordered table-hover align-middle text-center">
                    <thead class="table-dark">
                        <tr>
                            <th>STT</th>
                            <th>Ảnh</th>
                            <th>Tên sản phẩm</th>
                            <th>Danh mục</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Trạng thái</th>
                            <th>Chỉnh sửa</th>
                            <th>Chọn</th>
                        </tr>
                    </thead>

                    <tbody>
                        @{
                            int i = 1;
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@i</td>

                                <td>
                                    <img src="~/Images/@item.MainImage"
                                         class="img-thumbnail"
                                         style="width:80px;height:80px;object-fit:contain" />
                                </td>

                                <td class="text-start">@item.ProductName</td>
                                <td>@item.Category.CatName</td>

                                <td class="text-danger fw-bold">
                                    @item.Price.ToString("N0") ₫
                                </td>

                                <td>@item.Stock</td>

                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success">Hiển thị</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Ẩn</span>
                                    }
                                </td>

                                <td>
                                    <a href="@Url.Action("Edit", "Products", new { id = item.ProductId, area = "Admin" })"
                                       class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>

                                <td>
                                    <input type="checkbox"
                                           name="selectedIds"
                                           value="@item.ProductId" />
                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
