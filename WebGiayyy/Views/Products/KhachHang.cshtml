@model WebGiayyy.Models.AppUser

@{
    ViewBag.Title = "KhachHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="col-12 col-lg-9">
    <h3>Thông tin khách hàng</h3>
    <hr />

    <p><strong>Họ tên:</strong> @Model.FullName</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Số điện thoại:</strong> @Model.Phone</p>

    <hr />

    <a class="btn btn-danger" href="@Url.Action("Logout", "Products")">Đăng xuất</a>
</main>
