@model WebGiayyy.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-4">
    <div class="col-md-6">
        <div class="bg-white p-4 rounded shadow-sm text-center">
            <img src="~/Images/@Model.MainImage"
                 class="img-fluid"
                 style="max-height:400px;object-fit:contain">
        </div>

    </div>

    <div class="col-md-6">
        <div class="cat-tree">

            <h3>@Model.ProductName</h3>
            <p class="price fs-4">@Model.Price.ToString("N0")₫</p>
            <p>@Model.Summary</p>

            @using (Html.BeginForm("AddToCart", "Products", FormMethod.Post))
            {
                <input type="hidden" name="ProductId" value="@Model.ProductId" />

                <div class="mb-3">
                    <label class="form-label">Số lượng</label>

                    <!-- Select KHÔNG có name -->
                    <select class="form-select" id="quantitySelect">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="custom">Khác...</option>
                    </select>

                    <!-- INPUT DUY NHẤT MVC ĐỌC -->
                    <input type="number"
                           class="form-control mt-2 d-none"
                           id="quantityInput"
                           name="Quantity"
                           min="1"
                           value="1" />
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-brand btn-rounded">
                        Thêm vào giỏ
                    </button>
                </div>
            }
        </div>
    </div>



</div>
@if (ViewBag.RelatedProducts != null)
{
    <hr class="my-5" />

    <h4 class="mb-3">Sản phẩm liên quan</h4>

    <div class="row g-4">
        @foreach (var item in (List<WebGiayyy.Models.Product>)ViewBag.RelatedProducts)
        {
            <div class="col-6 col-md-3">
                <div class="card h-100 shadow-sm product-card">
                    <a href="@Url.Action("Details","Products", new { slug = item.Slug })">
                        <div class="product-img-wrapper">
                            <img src="~/Images/@item.MainImage"
                                 class="product-img"
                                 alt="@item.ProductName">
                        </div>
                    </a>

                    <div class="card-body text-center">
                        <h6 class="card-title text-truncate">
                            @item.ProductName
                        </h6>
                        <div class="price fw-bold text-danger">
                            @item.Price.ToString("N0")đ
                        </div>

                        <a href="@Url.Action("Details","Products", new { slug = item.Slug })"
                           class="btn btn-outline-dark btn-sm mt-2 w-100">
                            Xem chi tiết
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}



<script>
    const select = document.getElementById('quantitySelect');
    const input = document.getElementById('quantityInput');

    select.addEventListener('change', function () {
        if (this.value === 'custom') {
            input.classList.remove('d-none');
            input.value = 1;
        } else {
            input.classList.add('d-none');
            input.value = this.value;
        }
    });
</script>