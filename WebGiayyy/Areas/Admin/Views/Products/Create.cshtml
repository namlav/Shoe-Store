@model WebGiayyy.Models.Product

@{
    ViewBag.Title = "Thêm sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">➕ Thêm sản phẩm</h2>

@using (Html.BeginForm("Create", "Products", FormMethod.Post,
        new { enctype = "multipart/form-data" }))

{
    @Html.AntiForgeryToken()

    <div class="card shadow">
        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <!-- CATEGORY -->
            <div class="mb-3">
                @Html.LabelFor(m => m.CategoryId, "Danh mục")
                @Html.DropDownListFor(
                    m => m.CategoryId,
                    ViewBag.CategoryId as SelectList,
                    "-- Chọn danh mục --",
                    new { @class = "form-control" }
                )
                @Html.ValidationMessageFor(m => m.CategoryId)
            </div>

            <!-- SKU -->
            <div class="mb-3">
                @Html.LabelFor(m => m.SKU)
                @Html.TextBoxFor(m => m.SKU, new { @class = "form-control" })
            </div>

            <!-- NAME -->
            <div class="mb-3">
                @Html.LabelFor(m => m.ProductName, "Tên sản phẩm")
                @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control" })
            </div>

            <!-- SLUG -->
            <div class="mb-3">
                @Html.LabelFor(m => m.Slug)
                @Html.TextBoxFor(m => m.Slug, new { @class = "form-control" })
            </div>

            <!-- IMAGE -->
            <div class="mb-3">
                @Html.Label("MainImage", "Ảnh chính")
                <input type="file" name="MainImageFile" class="form-control" accept="image/*" />
            </div>

            <!-- SUMMARY -->
            <div class="mb-3">
                @Html.LabelFor(m => m.Summary, "Mô tả ngắn")
                @Html.TextAreaFor(m => m.Summary, 3, 50, new { @class = "form-control" })
            </div>

            <!-- PRICE -->
            <div class="mb-3">
                @Html.LabelFor(m => m.Price, "Giá (VNĐ)")
                @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "number", min = "0" })
            </div>

            <!-- STOCK -->
            <div class="mb-3">
                @Html.LabelFor(m => m.Stock, "Số lượng")
                @Html.TextBoxFor(m => m.Stock, new { @class = "form-control", type = "number", min = "0" })
            </div>

            <!-- IS ACTIVE -->
            <div class="form-check mb-3">
                @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input" })
                @Html.LabelFor(m => m.IsActive, "Kích hoạt", new { @class = "form-check-label" })
            </div>

            <!-- BUTTON -->
            <button type="submit" class="btn btn-success">
                💾 Lưu sản phẩm
            </button>
            <a href="@Url.Action("QuanLySanPham", "Products")" class="btn btn-secondary ms-2">
                ⬅ Quay lại
            </a>
        </div>
    </div>
}
